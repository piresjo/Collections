<%- include('header.ejs') -%>
<% if action == "add" { %>
    <title>Add Game</title>
<% } else { %>
    <title>Edit Game</title>
<% } %>

</head>

<body id="app">
    <%- include('navbar.ejs') -%>
    <div class="upper-container">
    <% if action == "add" { %>
        <h1>Add Game</h1>
    <% } else { %>
        <h1>Edit Game - ID:<%= game.id %></h1>
    <% } %>
        
    </div>
    <div class="form-container">
    <% if action == "add" { %>
        <form action="/games" 
            method="post"
            enctype="multipart/form-data">
            <label>Game Name: <input type="text" 
                                    name="gameName" 
                                    id="gameName"> </label>
            <br><br>
            <label>Console ID: <input type="number" 
                                    name="consoleId"
                                    step="1" 
                                    id="consoleId"> </label>
            <br><br>
            <label>Edition: <input type="text" 
                                    name="edition" 
                                    id="edition"> </label>
            <br><br>
            <label>Region ID: <input type="number" 
                                    name="region"
                                    step="1" 
                                    id="region"> </label>
            <br><br>
            <label>Release Date: <input type="date" 
                                    name="releaseDate" 
                                    id="releaseDate"> </label>
            <br><br>
            <label>Bought Date:  <input type="date" 
                                    name="boughtDate" 
                                    id="boughtDate"> </label>
            <br><br>
            <label>Developer: <input type="text" 
                                    name="developer" 
                                    id="developer"> </label>
            <br><br>
            <label>Publisher: <input type="text" 
                                    name="publisher" 
                                    id="publisher"> </label>
            <br><br>
            <label>Product Condition ID: <input type="number" 
                                    name="productCondition"
                                    step="1" 
                                    id="productCondition"> </label>
            <br><br>
            <label>Has Box? <input type="checkbox" 
                                    name="hasBox" 
                                    id="hasBox"> </label>
            <br><br>
            <label>Is Duplicate? <input type="checkbox" 
                                    name="isDuplicate" 
                                    id="isDuplicate"> </label>
            <br><br>
            <label>Digital? <input type="checkbox" 
                                    name="digital" 
                                    id="digital"> </label>
            <br><br>
            <label>Has Manual? <input type="checkbox" 
                                    name="hasManual" 
                                    id="hasManual"> </label>
            <br><br>
            <label>Has Game? <input type="checkbox" 
                                    name="hasGame" 
                                    id="hasGame"> </label>
            <br><br>
            <label> Value (USD): <input type="number" 
                                    name="monetaryValue"
                                    step="0.01" 
                                    id="monetaryValue"> </label>
            <br><br>
            <label> Notes: <input type="text" 
                                    name="notes" 
                                    id="notes"> </label>
            <br><br>
            <button type="submit">Create</button>
        </form>
    <% } else { %>
        <form action="/editGame/<%=game.id%>" 
            method="post"
            enctype="multipart/form-data">
            <label>Game Name: <input type="text" 
                                    name="gameName" 
                                    id="gameName"
                                    value="<%=game.name%>"> </label>
            <br><br>
            <label>Console ID: <input type="number" 
                                    name="consoleId"
                                    step="1" 
                                    id="consoleId"
                                    value="<%=game.console_id%>"> </label>
            <br><br>
            <label>Edition: <input type="text" 
                                    name="edition" 
                                    id="edition"
                                    value="<%=game.edition%>"> </label>
            <br><br>
            <label>Region ID: <input type="number" 
                                    name="region"
                                    step="1" 
                                    id="region"
                                    value="<%=game.region%>"> </label>
            <br><br>
            <label>Release Date: <input type="date" 
                                    name="releaseDate" 
                                    id="releaseDate"
                                    value="<%=game.release_date%>"> </label>
            <br><br>
            <label>Bought Date:  <input type="date" 
                                    name="boughtDate" 
                                    id="boughtDate"
                                    value="<%=game.bought_date%>"> </label>
            <br><br>
            <label>Developer: <input type="text" 
                                    name="developer" 
                                    id="developer"
                                    value="<%=game.developer%>"> </label>
            <br><br>
            <label>Publisher: <input type="text" 
                                    name="publisher" 
                                    id="publisher"
                                    value="<%=game.publisher%>"> </label>
            <br><br>
            <label>Product Condition ID: <input type="number" 
                                    name="productCondition"
                                    step="1" 
                                    id="productCondition"
                                    value="<%=game.product_condition%>"> </label>
            <br><br>
            <label>Has Box? <input type="checkbox" 
                                    name="hasBox" 
                                    id="hasBox"
                                    value="<%=game.has_box%>"> </label>
            <br><br>
            <label>Is Duplicate? <input type="checkbox" 
                                    name="isDuplicate" 
                                    id="isDuplicate"
                                    value="<%=game.is_duplicate%>"> </label>
            <br><br>
            <label>Digital? <input type="checkbox" 
                                    name="digital" 
                                    id="digital"
                                    value="<%=game.digital%>"> </label>
            <br><br>
            <label>Has Manual? <input type="checkbox" 
                                    name="hasManual" 
                                    id="hasManual"
                                    value="<%=game.has_manual%>"> </label>
            <br><br>
            <label>Has Game? <input type="checkbox" 
                                    name="hasGame" 
                                    id="hasGame"
                                    value="<%=game.has_game%>"> </label>
            <br><br>
            <label> Value (USD): <input type="number" 
                                    name="monetaryValue"
                                    step="0.01" 
                                    id="monetaryValue"
                                    value="<%=game.monetary_value%>"> </label>
            <br><br>
            <label> Notes: <input type="text" 
                                    name="notes" 
                                    id="notes"
                                    value="<%=game.notes%>"> </label>
            <br><br>
            <button type="submit">Update</button>
        </form>
    <% } %>
        
    </div>
    <div class="lower-container">

    </div>
</body>
<%- include('footer.ejs') -%>